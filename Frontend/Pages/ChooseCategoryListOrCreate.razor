@page "/ChooseCategoryListOrCreate"
@inject NavigationManager NavigationManager

<PageTitle>Choose category list</PageTitle>

<h3>Categories and under categories</h3>

<Row>
    <Column ColumnSize="ColumnSize.Is6">
        <Card>
            <CardBody>
                <h5>
                    <strong>View all</strong>
                </h5>
                <Div>
                    See the full list of categories and sub categories.
                </Div>
                <Div Class="mt-1">
                    <Button Color="Color.Primary" Style="width: 100%" Clicked="OpenList">
                        View
                    </Button>
                </Div>
            </CardBody>
        </Card>
    </Column>
    <Column ColumnSize="ColumnSize.Is6">
        <Card>
            <CardBody>
                <h5>
                    <strong>Create new</strong>
                </h5>
                <Div>
                    Categories and sub categories.
                </Div>
                <Div Class="mt-1">
                    <Button Color="Color.Primary" Style="width: 100%" Clicked="OpenCreate">
                        Create
                    </Button>
                </Div>
            </CardBody>
        </Card>
    </Column>
</Row>

@code {
    private void OpenCreate()
    {
        NavigationManager.NavigateTo("/createCategory");
    }
    private void OpenList()
    {
        NavigationManager.NavigateTo("/CategoryList");
    }
}
